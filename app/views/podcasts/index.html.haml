- if flash[:notice]
  = render 'shared/success_notice'
- content_for :title do
  
  %title  Latest News On Your Career | Joynus Staffing.
  %meta{:content => "Get the latest industry scoop and informative knowledge.", :name => "Description"}
  %link{:href => "https://www.joynus.com/podcasts", :rel => "canonical"}
  %script{:crossorigin => "anonymous", :integrity => "sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo", :src => "https://code.jquery.com/jquery-3.3.1.slim.min.js"}
