    //navigation header
    %header
      %nav(role='navigation')
        .navbar-container
          %div
            .navbar-header
              = active_link_to root_url do
                .img-logo
            %ul.menu
              .hide-for-medium-up
                %a.closemenu{ href: '#', data: { action: 'toggleMenu' } }
