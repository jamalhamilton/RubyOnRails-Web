    //footer
    %footer
      .row
        .columns.xlarge-3.medium-6
          %h3
            %b
              = active_link_to t('footer.about'), about_index_path

          %ul.links
            %li
              = active_link_to t('footer.corevalue'), about_index_path(:anchor => "corevalue")
